      '#define SamplesCount 4'
      ''
      'in      vec4        TexCoord;'
      'out     vec4        color;'
      'uniform sampler2DMS TexUnit0;'
      'uniform vec2        ViewerSize;'
      ''
      'void main()'
      '{'
      #9'vec4 final = vec4(0.0, 0.0, 0.0, 0.0);'
      #9'int i;'
      #9'for (i=0; i<SamplesCount; i++)'
      #9'{'#9
      #9#9'vec4 sample = texelFetch(TexUnit0, ivec2(ViewerSize* TexCoord.xy), i);'
